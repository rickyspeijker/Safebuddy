{
  "name": "Rating",
  "type": "object",
  "properties": {
    "rated_user_id": {
      "type": "string",
      "description": "ID of the user being rated"
    },
    "rater_user_id": {
      "type": "string",
      "description": "ID of the user giving the rating"
    },
    "buddy_request_id": {
      "type": "string",
      "description": "Reference to the buddy request/trip"
    },
    "rating": {
      "type": "number",
      "minimum": 1,
      "maximum": 5,
      "description": "Star rating (1-5)"
    },
    "review": {
      "type": "string",
      "description": "Optional text review"
    },
    "safety_rating": {
      "type": "number",
      "minimum": 1,
      "maximum": 5,
      "description": "How safe did you feel (1-5)"
    },
    "punctuality_rating": {
      "type": "number",
      "minimum": 1,
      "maximum": 5,
      "description": "Punctuality rating (1-5)"
    },
    "communication_rating": {
      "type": "number",
      "minimum": 1,
      "maximum": 5,
      "description": "Communication rating (1-5)"
    }
  },
  "required": [
    "rated_user_id",
    "rater_user_id",
    "rating"
  ]
}