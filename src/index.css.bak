:root{
  --lavender: #C7B8FF;
  --midnight: #2C3E91;
}
/* Fallbacks and small helpers so layout looks reasonable */

html,body,#root{ height:100%; }
body{
  font-family: Inter, ui-sans-serif, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
  margin:0;
  background: linear-gradient(180deg, #F9F7FF 0%, #FFFFFF 100%);
  color: #1f2937;
}

/* Basic nav fallback styling when Tailwind is not present */
nav[role='bottom-nav'], nav{
  position:fixed; bottom:0; left:0; right:0; background:rgba(255,255,255,0.95); border-top:1px solid #E5DFFF; backdrop-filter: blur(6px);
}
nav .nav-inner{ max-width:720px; margin:0 auto; padding:10px 16px; display:flex; justify-content:space-around; align-items:center; }
nav a{ text-decoration:none; color:#374151; display:flex; flex-direction:column; align-items:center; gap:4px; }

/* small utility classes to emulate some Tailwind utilities used in Layout.js */
.min-h-screen{ min-height:100vh; }
.px-4{ padding-left:1rem; padding-right:1rem; }
.py-3{ padding-top:0.75rem; padding-bottom:0.75rem; }
.text-xs{ font-size:12px; }
.font-medium{ font-weight:500; }
.rounded-xl{ border-radius:12px; }
.shadow-lg{ box-shadow: 0 10px 25px rgba(2,6,23,0.08); }
.bg-white\/95{ background-color: rgba(255,255,255,0.95); }

/* tiny responsive wrapper */
.max-w-md{ max-width:520px; }
.mx-auto{ margin-left:auto; margin-right:auto; }

/* make sure icons get some default size if lucide not styled */
svg{ width:20px; height:20px; }
